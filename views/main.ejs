<!doctype html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.css" type="text/css"> 
    <link href='http://fonts.googleapis.com/css?family=Josefin+Sans' rel='stylesheet' type='text/css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
    <script src="http://d3js.org/d3.v3.min.js"></script>
    <script src="js/main.js"></script>
  </head>
  
  <body>
    <svg id = 'data'></svg><div id = "interface">
      <div id='tab_menu'>
	<div id='tab_bar'>
	  <button id='tab_1' class='tab_button'>Add Crew</button>
	  <button id='tab_3' class='tab_button'>Add Location</button>
	  <button id='tab_4' class='tab_button'>Add Ships</button>
	  <button id='tab_2' class='tab_button'>Add Expedition</button>
	</div>
	<form class='tab_form active_tab' id='tabcontent_1' name='personForm'>
	  <h1>Add Crew</h1>
	  <input type='text' name='label'><br>
	  <button type='button' id='personSubmit' class='submit_'>Add...</button>
	</form>
	<form class='tab_form' id='tabcontent_2' name='expeditionForm'>
	  <h1>Set Expedition</h1>
	  <p>Expedition Name <input name='label'></p>
	  <p>Ship <select id='ship_select' name='shipid'>
	  </select></p>
	  <p>To: <select id='loc_select' name='locid'></select></p>
	  <input type='hidden' value='0' name='nump' id='nump'>
	  <select id='peeps' style='display:none;'></select>
	  <button type='button' id='addc'>Add crew...</button>
	  <div id='crew_list'></div>
	  <button type='button' id='setExpd'>Set Expedition</button>
	</form>
	<form class='tab_form' id='tabcontent_3' name='locationForm'>
	  <h1>Add Location</h1>
	  <input type='text' name='label'><br>
	  <button type='button' id='locSubmit' class='submit_'>Add...</button>
	</form>
	<form class='tab_form' id='tabcontent_4' name='shipForm'>
	  <h1>Add Ships...</h1>
	  <input type='text' name='label'><br>
	  <button type='button' id='shipSubmit' class='submit_'>Add...</button>
	</form>
      </div>
      <form id="searchForm">
        <p >Search <input type="text" id="search" action="search" /></p>
      </form>
      <button id='reset'>Reset</button>
    </div>
  </body>
</html>
